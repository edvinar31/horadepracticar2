//ejercicio 1
let dias = ("Sábado","Domingo");
let diaDeLaSemana = prompt("Escribe el día de la semana");
if(diaDeLaSemana == dias){
alert("buen fin de semana");
} else{
alert("buena semana");
}

//ejercico 2

let numero = prompt("escribe un número positivo o negativo");
if(numero > 0){
alert("numero positivo")
} else if(numero < 0) {
alert("numero negarito");
} else {
alert("el número es 0");
}


